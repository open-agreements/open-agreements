{
  "name": "open-agreements",
  "version": "0.1.0",
  "description": "Open-source legal template filling CLI and library",
  "repository": {
    "type": "git",
    "url": "https://github.com/open-agreements/open-agreements.git"
  },
  "homepage": "https://github.com/open-agreements/open-agreements#readme",
  "bugs": {
    "url": "https://github.com/open-agreements/open-agreements/issues"
  },
  "type": "module",
  "bin": {
    "open-agreements": "./bin/open-agreements.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist/",
    "bin/",
    "templates/",
    "external/",
    "recipes/",
    "skills/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "build:workspace": "tsc -p packages/contracts-workspace/tsconfig.json",
    "build:workspace-mcp": "tsc -p packages/contracts-workspace-mcp/tsconfig.json",
    "dev": "tsc --watch",
    "test": "vitest",
    "test:workspace": "vitest run packages/contracts-workspace/tests",
    "test:workspace-mcp": "vitest run packages/contracts-workspace-mcp/tests",
    "test:coverage": "vitest run --coverage --coverage.reporter=lcov --coverage.reporter=text-summary",
    "test:run": "vitest run",
    "lint": "eslint src/",
    "validate": "node bin/open-agreements.js validate",
    "prepare": "npm run build"
  },
  "keywords": [
    "legal",
    "templates",
    "nda",
    "agreements",
    "docx",
    "contract",
    "fill",
    "cli",
    "mcp",
    "claude",
    "legal-tech",
    "open-source",
    "safe",
    "nvca",
    "template-engine",
    "document-generation",
    "contract-automation"
  ],
  "author": "UseJunior <steven@usejunior.com>",
  "license": "MIT",
  "dependencies": {
    "@xmldom/xmldom": "^0.9.5",
    "adm-zip": "^0.5.16",
    "commander": "^13.1.0",
    "docx-templates": "^4.13.0",
    "js-yaml": "^4.1.0",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/adm-zip": "^0.5.7",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.13.0",
    "@vitest/coverage-v8": "^3.2.4",
    "allure-vitest": "^3.4.5",
    "docx": "^9.5.1",
    "eslint": "^9.19.0",
    "globals": "^14.0.0",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.54.0",
    "vitest": "^3.0.0"
  },
  "engines": {
    "node": ">=20"
  }
}
